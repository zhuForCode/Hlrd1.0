<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:id="@+id/pref_icon"
            android:contentDescription="icon"
            android:layout_marginLeft="8dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical|start"
            android:id="@+id/pref_title"
            android:textColor="@color/common_black_shadow"
            android:textSize="16sp" />

    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/pref_arrow"
            android:gravity="center_vertical|end"
            android:id="@+id/pref_summary"
            android:textColor="@color/common_dark"
            android:textSize="16sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:id="@+id/pref_arrow"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="icon"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>